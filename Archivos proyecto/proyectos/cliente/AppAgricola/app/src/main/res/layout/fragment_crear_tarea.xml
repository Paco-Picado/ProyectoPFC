<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marron_clarito"
    tools:context=".tareasActivity.crearTarea.CrearTareaFragment">

    <TextView
        android:id="@+id/textViewTituloFechaCrearTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:text="Fecha: fecha"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageButtonVolverATareasDia"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTituloAliasCrearTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="17dp"
        android:text="Alias: alias"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageButtonVolverATareasDia"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloFechaCrearTarea" />


    <TextView
        android:id="@+id/textViewTituloCultivoCrearTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="13dp"
        android:text="Crear tarea para cultivo"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageButtonVolverATareasDia"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloAliasCrearTarea" />

    <EditText
        android:id="@+id/editTextNombreTarea"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:maxLength="30"
        android:hint="Escribe el nombre de la tarea"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloCultivoCrearTarea" />

    <EditText
        android:id="@+id/editTextDescripcionTarea"
        android:layout_width="325dp"
        android:layout_height="272dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="start|top"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Escribe la acción de la tarea"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreTarea" />

    <ImageButton
        android:id="@+id/imageButtonVolverATareasDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/icons8_arrow_left_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCrearTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="42dp"
        android:text="Añadir tarea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescripcionTarea" />

</androidx.constraintlayout.widget.ConstraintLayout>